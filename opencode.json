{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "edit": "ask",
    "bash": "ask",
    "webfetch": "ask"
  },
  "model": "openai/gpt-5",
  "provider": {
    "openai": {
      "options": {
        "apiKey": "{file:~/.secrets/opencode/openai-key}"
      }
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{file:~/.secrets/opencode/context7-key}"
      }
    }
  },
  "instructions": ["README.md", "AGENTS.md"],
  "theme": "opencode",
  "autoupdate": true
}
